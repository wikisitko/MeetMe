@model string

@Model
<form asp-action="AddRoleToUser">
	<div class="form-group">
		<label>User</label>
		<input name="email" value="@ViewBag.Email" class="form-control" readonly/>
	</div>
	<div class="form-group">
		<select name="roleId" asp-items="@ViewBag.Roles" class="form-control"></select>
	</div>
	<div class="form-group">
		<button type="submit" value="AddRoleToUser" class="btn btn-success">Dodaj role</button>
	</div>
</form>